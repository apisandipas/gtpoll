{% import "_includes/forms" as forms %}

{% set polls = craft.gtPoll.polls %}

{% set options = [] %}

{% for poll in polls %}

  {% set options = options|merge({
    ('poll_' ~ poll.id) : poll.questionText
  }) %}

{% endfor %}

{{ forms.selectField({
    id: id,
    name: name,
    options: options,
    value: 'poll_' ~ values
}) }}
